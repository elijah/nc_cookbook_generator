require 'serverspec'
<% titleized = cookbook_name.split(/ |\_/).map(&:capitalize).join %>
module <%= titleized %>
  module Helper
  end
end

if (%r{/cygwin|mswin|mingw|bccwin|wince|emx} =~ RUBY_PLATFORM).nil?
  set :backend, :exec
else
  set :backend, :cmd
  set :os, family: 'windows'
end

RSpec.configure { |config|
  config.extend <%= titleized %>::Helper
  config.include <%= titleized %>::Helper
}
