---
driver:
  name: vagrant

provisioner:
  name: chef_zero

<% if @use_inspec %>
verifier:
  name: inspec
  format: documentation
<% end %>

platforms:
  - name: ubuntu-16.04
    driver:
      box: bento/ubuntu-16.04
  - name: centos-7.1
    driver:
      box: bento/centos-7.1

suites:
  - name: default
    run_list:
      - recipe[<%= cookbook_name %>::default]
    attributes:
